# AWS Propuestas v2 - Environment Variables Example
# Copy this file to .env.local and fill in your values

# API Configuration (Auto-generated by deployment script)
NEXT_PUBLIC_API_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_REGION=us-east-1
NEXT_PUBLIC_ENVIRONMENT=prod

# Optional: Debug mode
NEXT_PUBLIC_DEBUG=false

# AWS Configuration (for local development only)
# These are not needed in production as Lambda uses IAM roles
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Bedrock Configuration
BEDROCK_REGION=us-east-1

# DynamoDB Configuration (Auto-generated by deployment)
DYNAMODB_CHAT_SESSIONS_TABLE=aws-propuestas-chat-sessions-prod
DYNAMODB_PROJECTS_TABLE=aws-propuestas-projects-prod

# S3 Configuration (Auto-generated by deployment)
S3_DOCUMENTS_BUCKET=aws-propuestas-documents-prod-randomstring

# Application Configuration
APP_NAME=AWS Propuestas v2
APP_VERSION=2.0.0
APP_DESCRIPTION=Sistema profesional para generar propuestas AWS con IA

# Feature Flags
ENABLE_CHAT_LIBRE=true
ENABLE_ARQUITECTO_MODE=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_COST_ESTIMATION=true

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_MESSAGES_PER_SESSION=100

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt,csv,xlsx

# Monitoring
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
